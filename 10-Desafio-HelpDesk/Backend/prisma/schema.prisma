generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  technician
  client
}

enum Status {
  opened
  in_progress
  closed
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  profilePicture String? @map("profile_picture")

  role Role @default(client)

  openingHours OpeningHour?

  clientRequest Request[] @relation("client")
  technicianRequest Request[] @relation("technician")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("users")
}

model OpeningHour {
  userId String @id @map("user_id")
  availableHours Int[] @map("available_hours")

  user User @relation(fields: [userId], references: [id])

  @@map("opening_hours")
}

model Service {
  id String @id @default(uuid())
  title String
  value Float

  requests RequestService[]

  isActive Boolean @default(true) @map("is_active")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("services")
}

model Request {
  id Int @id @default(autoincrement())

  title String
  description String

  status Status @default(opened)

  requestedBy String @map("requested_by")
  client User @relation("client", fields: [requestedBy], references: [id])

  assignedTo String @map("assigned_to")
  technician User @relation("technician", fields: [assignedTo], references: [id])

  services RequestService[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("requests")
}

model RequestService {
  id String @id @default(uuid())

  requestId Int @map("request_id")
  request Request @relation(fields: [requestId], references: [id])

  serviceId String @map("service_id")
  service Service @relation(fields: [serviceId], references: [id])


  createdAt DateTime @default(now()) @map("created_at")

  @@map("requests_services")
}