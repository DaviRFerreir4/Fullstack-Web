{
  "compilerOptions": {
    "target": "es2023",
    "lib": ["ES2023"],

    "paths": {
      "@/*": ["./src/*"]
    },

    "rootDir": "./",
    "outDir": "./dist",

    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
