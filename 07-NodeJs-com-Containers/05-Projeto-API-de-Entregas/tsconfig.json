{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2023"],

    "paths": {
      "@/*": ["./src/*"]
    },

    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    "strict": true,
    "skipLibCheck": true
  }
}
